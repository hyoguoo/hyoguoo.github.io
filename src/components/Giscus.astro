---
// Giscus comment component â€” GitHub Discussions based.
// Configuration (repo IDs) lives in src/data/giscusConfig.ts.
import { repo, repoId, category, categoryId } from '../data/giscusConfig';
---

<div class="giscus-wrapper">
  <script
    src="https://giscus.app/client.js"
    data-repo={repo}
    data-repo-id={repoId}
    data-category={category}
    data-category-id={categoryId}
    data-mapping="pathname"
    data-strict="0"
    data-reactions-enabled="1"
    data-emit-metadata="0"
    data-input-position="top"
    data-theme="preferred_color_scheme"
    data-lang="ko"
    crossorigin="anonymous"
    async
  ></script>
</div>

<style>
  .giscus-wrapper {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--sl-color-gray-5);
  }
</style>
