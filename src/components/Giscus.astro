---
// Giscus comment component - GitHub Discussions based
// Set up: https://giscus.app (choose your repo and get these values)
const repo = 'hyoguoo/hyoguoo.github.io';
const repoId = 'PLACEHOLDER_REPO_ID';
const category = 'Comments';
const categoryId = 'PLACEHOLDER_CATEGORY_ID';
---

<div class="giscus-wrapper">
  <script
    src="https://giscus.app/client.js"
    data-repo={repo}
    data-repo-id={repoId}
    data-category={category}
    data-category-id={categoryId}
    data-mapping="pathname"
    data-strict="0"
    data-reactions-enabled="1"
    data-emit-metadata="0"
    data-input-position="top"
    data-theme="preferred_color_scheme"
    data-lang="ko"
    crossorigin="anonymous"
    async
  ></script>
</div>

<style>
  .giscus-wrapper {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--sl-color-gray-5);
  }
</style>
