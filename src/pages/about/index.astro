    <style>
      *, *::before, *::after { box-sizing: border-box; }

      :root {
        --color-bg: #0f172a;
        --color-surface: #1e293b;
        --color-border: #334155;
        --color-text: #e2e8f0;
        --color-text-muted: #94a3b8;
        --color-accent: #3b82f6;
        --color-accent-light: #60a5fa;
        --max-width: 800px;
      }

      @media (prefers-color-scheme: light) {
        :root {
          --color-bg: #f8fafc;
          --color-surface: #ffffff;
          --color-border: #e2e8f0;
          --color-text: #0f172a;
          --color-text-muted: #64748b;
          --color-accent: #2563eb;
          --color-accent-light: #3b82f6;
        }
      }

      body {
        background: var(--color-bg);
        color: var(--color-text);
        font-family: 'Apple SD Gothic Neo', 'Malgun Gothic', -apple-system, BlinkMacSystemFont, sans-serif;
        margin: 0;
        padding: 0;
        line-height: 1.7;
      }

      .container {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 1.5rem;
      }

      /* Header */
      header {
        border-bottom: 1px solid var(--color-border);
        padding: 1rem 0;
      }

      nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .nav-brand {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 700;
        font-size: 1.1rem;
        color: var(--color-text);
        text-decoration: none;
      }

      .nav-icon {
        flex-shrink: 0;
        border-radius: 4px;
      }

      .nav-links {
        display: flex;
        gap: 1.5rem;
        list-style: none;
        margin: 0;
        padding: 0;
      }

      .nav-links a {
        color: var(--color-text-muted);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.2s;
      }

      .nav-links a:hover { color: var(--color-accent-light); }
      .nav-links a[aria-current] { color: var(--color-text); font-weight: 500; }

      /* Profile */
      .profile {
        padding: 4rem 0 2.5rem;
      }

      .profile-content {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 2rem;
      }

      .profile-text { flex: 1; }

      .profile-image img {
        width: 150px;
        height: 150px;
        object-fit: contain;
        border-radius: 16px;
        background: #ffffff;
        display: block;
      }

      @media (max-width: 520px) {
        .profile-content { flex-direction: column-reverse; gap: 1.5rem; }
        .profile-image img { width: 110px; height: 110px; }
      }

      .profile h1 {
        font-size: 2rem;
        font-weight: 700;
        margin: 0 0 0.4rem;
      }

      .profile .role {
        font-size: 1rem;
        color: var(--color-text-muted);
        margin: 0 0 0.3rem;
      }

      .profile .tagline {
        font-size: 0.85rem;
        color: var(--color-text-muted);
        opacity: 0.7;
        margin: 0 0 1.75rem;
      }

      .profile-links {
        display: flex;
        gap: 0.6rem;
        flex-wrap: wrap;
      }

      .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.45rem 1rem;
        border-radius: 6px;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 500;
        border: 1px solid var(--color-border);
        background: var(--color-surface);
        color: var(--color-text);
        transition: border-color 0.2s;
      }

      .btn:hover { border-color: var(--color-accent); color: var(--color-accent-light); }

      /* Section */
      .section {
        padding: 2.25rem 0;
        border-top: 1px solid var(--color-border);
      }

      .section h2 {
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--color-text-muted);
        margin: 0 0 1.25rem;
      }

      /* Skills */
      .stack-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
      }

      .stack-item {
        padding: 0.3rem 0.7rem;
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: 6px;
        font-size: 0.82rem;
        font-family: ui-monospace, 'SF Mono', 'Fira Code', monospace;
      }

      .stack-item.main {
        border-color: var(--color-accent);
        color: var(--color-accent-light);
      }

      /* Stats */
      .stats-grid {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        align-items: flex-start;
      }

      .stats-item img {
        height: 140px;
        max-width: 100%;
        border-radius: 6px;
        display: block;
      }

      /* Writing */
      .post-list {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
      }

      .post-list li a {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.8rem 1rem;
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: 8px;
        text-decoration: none;
        color: var(--color-text);
        transition: border-color 0.2s;
      }

      .post-list li a:hover { border-color: var(--color-accent); }
      .post-list .post-title { font-size: 0.9rem; font-weight: 500; }
      .post-list .post-arrow { color: var(--color-text-muted); font-size: 0.85rem; }

      /* Study Log */
      .log-card {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.25rem;
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-left: 3px solid var(--color-accent);
        border-radius: 8px;
        text-decoration: none;
        color: var(--color-text);
        transition: border-color 0.2s;
      }

      .log-card:hover { border-color: var(--color-accent); opacity: 0.9; }

      .log-card-left { display: flex; flex-direction: column; gap: 0.2rem; }
      .log-card-title { font-size: 0.9rem; font-weight: 600; }
      .log-card-desc { font-size: 0.8rem; color: var(--color-text-muted); }

      .badge {
        font-size: 0.7rem;
        font-family: ui-monospace, 'SF Mono', monospace;
        padding: 0.15rem 0.5rem;
        border-radius: 4px;
        background: color-mix(in srgb, var(--color-accent) 15%, transparent);
        color: var(--color-accent-light);
        border: 1px solid color-mix(in srgb, var(--color-accent) 30%, transparent);
        white-space: nowrap;
      }

      /* Footer */
      footer {
        border-top: 1px solid var(--color-border);
        padding: 2rem 0;
        text-align: center;
        color: var(--color-text-muted);
        font-size: 0.85rem;
        margin-top: 2rem;
      }
    </style>
